<h1>Title: <%= @task.title %></h1>
<h3>Content: <%= @task.content %></h3>
<%= @task.image %></br>
<p>Start date: <%= @task.start_date %></p>
<p> Due date: <%= @task.due_date %></p>
<p>Estimation: <%= @task.estimation %></p>
<p>Project id: <%= @task.project_id %></p>
<p>User id: <%= @task.user_id %></p>
<p> Task status: <%= @task.status %></p>
<%= link_to "Edit", edit_task_path(@task), :class => 'btn btn-warning' %>
<%= link_to "Delete", task_path(@task), method: :delete, data: {confirm: "Are you sure?"}, :class => 'btn btn-danger' %>